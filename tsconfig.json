{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["dom"],
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
